<%= render "layouts/navbar" %>

<div class="container">
      <div class="row row-cols-1 row-cols-md-4 g-4">
        <% @instruments.each do |instrument| %>
        <div class="col">
          <div class="card border-dark" style="width: 18rem; border-radius: 8px;">
            <%= cl_image_tag @instrument.picture.key, height:250, class:"card-img-top; border-bottom", style:"border-top-left-radius: 8px; border-top-right-radius: 8px;" %>
            <div class="card-body">
              <h5 class="card-title fw-bold"><%= instrument.name %></h5>
              <p class="card-text"><%= instrument.description %></p>
              <p class="card-text"><%= "#{instrument.price}â‚¬" %></p>
              <div class="d-flex justify-content-end">
              <div>
                  <%= link_to 'Voir', instrument_path(instrument), :class => "btn btn-secondary me-2", :style => "border-radius: 6px;" %>
                  <%= link_to "Louer", new_instrument_booking_path(instrument), class: "btn btn-secondary", style:"border-radius: 6px;" %>
              </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
<%= render "layouts/footer" %>
