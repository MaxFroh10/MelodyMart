<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<h1>Instruments</h1>

<div id="instruments">
  <% @instruments.each do |instrument| %>
    <%= render instrument %>
    <p>
      <%= link_to 'Show', instrument_path(instrument) %>
      <%= link_to 'Edit', edit_instrument_path(instrument) %>
      <%= link_to 'Delete', instrument_path(instrument), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      <%# Or use button_to instead of link_to
      <%= button_to 'Delete', instrument_path(instrument), method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>
</div>

<%= link_to "New instrument", new_instrument_path %>
