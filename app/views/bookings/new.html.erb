<div class="d-flex align-items-center justify-content-center">
  <div class="card border-dark" style="width: 18rem; border-radius: 8px;">
    <%= cl_image_tag @instrument.picture.key, height:250, class:"card-img-top; border-bottom", style:"border-top-left-radius: 8px; border-top-right-radius: 8px;" %>
    <div class="card-body d-flex flex-column align-items-center">
      <h5 class="card-title fw-bold"><%= @instrument.name %></h5>
      <p class="card-text"><%= @instrument.description %></p>
      <p class="card-text"><%= "#{@instrument.price.round}€" %></p>
    </div>
  </div>

  <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" fill="currentColor" class="bi bi-arrow-right-circle mx-5" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"/>
  </svg>

  <div class="card border-dark px-3" style="width: 18rem; border-radius: 8px;">
    <%= simple_form_for [@instrument, @booking], data: { controller: 'flatpickr' } do |f| %>
      <div class="form-inputs">
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <% f.input :instrument %>
        <%= f.input :start_date, label: "Date de début", as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
        <%= f.input :end_date, label: "Date de fin", as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, :class => "btn btn-flat mb-2", :style => "border-radius: 6px;" %>
      </div>
    <%end%>
  </div>
</div>
